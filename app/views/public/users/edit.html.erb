<div class="container">
  <div class="row">
    <h3 class="col-3 mt-5 mb-4 mini-title">会員情報編集画面</h3>
  </div>
  <div class="row">
    <div class="col-10 offset-1 py-5 mt-4 mini-title">
      <div class="col-md-9 offset-md-1 mt-2 bg-light py-3">
        <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
          <div class="form-group row mt-3">
            <%= f.label :プロフィール画像 %>
            <div class="col-8 offset-2">
              <%= f.file_field :profile_image, accept: "image/*", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-3">
            <%= f.label :ニックネーム %>
            <div class="col-8 offset-2">
              <%= f.text_field :nickname, class: "form-control" %>
            </div>
          </div>

          <div class="form-group row mt-3">
            <%= f.label :メールアドレス %>
            <div class="col-8 offset-2">
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </div>
          </div>

          <%= f.submit "編集内容を保存する", class: "col-md-3 offset-md-6 mt-5 btn btn-success" %>
          <%= link_to "戻る",user_path(current_user), class: "col-2 mt-5 btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>