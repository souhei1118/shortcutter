<div class="container">
	<div class="row">
		<div class="col-4">
		<% unless user_signed_in? %>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="card">
        <article class="card-body">
    	    <h4 class="card-title text-center mb-4 mt-1">サインイン</h4>
    	    <hr>
          <p class="text-success text-center">Emailとパスワードを入力してください</p>
          <form>
  		    <form class="login-form">
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
              </div>
            </div>
            <div class="form-group mt-4">
              <div class="input-group mt-4">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <%= f.password_field :password, class: "form-control", placeholder: "password" %>
              </div>
            </div>
            <div class="d-grid gap-2 col-6 mt-4 mx-auto">
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
            <div>
              新規登録は<%= link_to "こちら", new_user_registration_path %>から
            </div>
          </form>
        </article>
      </div>
      <% end %>
    <% end %>
    </div>
    <div class="col-8">
      アイウエオ
    </div>
  </div>
</div>