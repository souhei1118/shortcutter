<%= render "public/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row">
    <div class="py-3 mt-5 mini-title">
    <div class="col-md-10 offset-md-1 bg-light py-3">
      <h3 class="col-3 mb-4 mini-title">新規登録</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group row">
          <%= f.label :ニックネーム, class: "col-3 mx-auto" %>
          <div class="col-5 mx-auto">
            <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form-control",:placeholder => "２文字以上２０文字以内" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :email, class: "col-3 mx-auto" %>
          <div class="col-5 mx-auto">
            <%= f.email_field :email, autocomplete: "email", class: "form-control",:placeholder => "(例)example@gmail.com" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :password, class: "col-3 mx-auto" %>
          <div class="col-5 mx-auto">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control",:placeholder => "パスワードは６文字以上" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
        </div>

        <div class="form-group row mt-2">
          <%= f.label :password_confirmation, class: "col-3 mx-auto" %>
          <div class="col-5 mx-auto">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control",:placeholder => "確認のためもう一度入力してください" %>
          </div>
        </div>

        <div class="form-group row col-md-6 offset-md-3 mt-5">
          <%= f.submit "新規登録",class: "btn btn-success" %>
        </div>
      <% end %>

      <div class="col-md-6 offset-md-3 mt-4 mini-title">
        会員登録がお済みの方は<span><%= link_to "こちら", root_path %></span>からログインしてください
      </div>
    </div>
    </div>
  </div>
</div>