<h1>ユーザー用ショートカット一覧画面</h1>
<%#= link_to "ブックマークしたショートカットを見る", bookmarks_user_path %>
<% if @shortcuts.present? %>
  <table>
    <thead>
      <tr>
        <th>ショートカット名</th>
        <th>コマンド</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @shortcuts.each do |shortcut| %>
      <tr>
        <td>
          <%= link_to shortcut_path(shortcut.id) do %>
            <%= shortcut.name %>
          <% end %>
        </td>
        <td>
          <%= shortcut.key %>
        </td>
        <td>
          <!--いいね数</br>-->
          <!--コメント数</br>-->
          <!--使用頻度-->
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
  <p>ショートカットキーがまだ登録されていません。</p>
<% end %>