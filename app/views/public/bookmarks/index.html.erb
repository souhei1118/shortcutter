<div class = "container mt-5">
  <h1>【ブックマーク一覧】</h1>
  <% if @bookmarks.present? %>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>ショートカット名</th>
          <th>コマンド</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @bookmarks.each do |bookmark| %>
          <tr>
            <td>
              <%= link_to bookmark.shortcut.name, shortcut_path(bookmark.shortcut.id) %>
            </td>
            <td><%= bookmark.shortcut.key %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>ブックマークがまだ登録されていません。</p>
  <% end %>
</div>
