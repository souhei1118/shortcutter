<div class="container">
  <div class="row">
    <h3 class="col-3 mt-5 mb-2 mini-title">会員情報詳細画面</h3>
  </div>
  <div class="row">
    <div class="col d-flex py-5 mt-2 mini-title">
      <div class="col-md-6">
        <span class="fw-bold">ユーザー画像</span>
        <p><%= image_tag @user.get_profile_image(500,500) %></p>
      </div>
      <div class="col-md-6">
        <div class="col-4 mini-title">
          ニックネーム
        </div>
        <div class="mt-4 fw-bold">
          <%= @user.nickname %>
        </div>
        <div class="col-4 mini-title">
          メールアドレス
        </div>
        <div class="mt-4 fw-bold">
          <%= @user.email %>
        </div>
        <div class="col-4 mini-title">
          会員ステータス
        </div>
        <div class="mt-4 fw-bold">
          <% if @user.is_deleted == true %>
              <span class="text-danger">退会済</span>
          <% else %>
              <span class="text-success">有効</span>
          <% end %>
        </div>
        <%= link_to edit_admin_user_path(@user),class: "btn btn-secondary btn-block col-8 mt-4 edit_user_#{@user.id}" do %>
          <i class="fas fa-user-cog">プロフィールを編集する</i>
        <% end %>
      </div>
    </div>
  </div>
</div>
