<div class="container">
  <div class="row">
    <h3 class="col-4 mt-5 mb-4 mini-title">管理者会員情報編集画面</h3>
  </div>
  <div class="row">
    <div class="col-10 offset-1 py-5 mt-4 mini-title">
      <div class="col-md-10 offset-1 mt-2 bg-light py-3">
        <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
          <div class="form-group row mt-3 fw-bold">
            <%= f.label :ニックネーム %>
            <div class="col-8 offset-2">
              <%= f.text_field :nickname, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-3 fw-bold">
            <%= f.label :メールアドレス %>
            <div class="col-8 offset-2">
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
          <div class="mt-4 mb-4">
              <%= f.radio_button :is_deleted, false %>
          　<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
            　<%= f.radio_button :is_deleted, true %>
          　<%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
          </div>
          <div class="offset-6">
            <%= f.submit "編集内容を保存する",class: "btn btn-success" %>
            <%= link_to "戻る",admin_user_path(@user),class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
