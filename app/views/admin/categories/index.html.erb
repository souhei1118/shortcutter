<div class="container">
  <div class="row">
    <h3 class="col-6 mt-2 mb-4 mini-title">管理者カテゴリ一覧画面</h3>
  </div>
  <div class="row">
    <div class="col-8 offset-2 mini-title">
      <%= form_for(@category, url: admin_categories_path) do |f| %>
        <div class="form-inline mt-3 fw-bold">
          <div class="col-8 offset-2 d-flex">
            <div class="col-2 mt-1">
              <%= f.label :カテゴリ名 %>
            </div>
            <div class="col-4">
              <%= f.text_field :name,class: "form-control" %>
            </div>
            <div class="col-3">
              <%= f.submit "追加" ,class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
      <table class="table table-hover bg-light mt-2 text-center">
        <thead>
          <tr>
            <th>カテゴリ名</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to "編集する", edit_admin_category_path(category), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @categories %>
    </div>
  </div>
</div>
