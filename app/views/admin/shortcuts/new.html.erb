<%= render 'layouts/errors', obj: @shortcut %>
<div class="container">
  <div class="row">
    <h3 class="col-5 mt-3 mb-4 mini-title">管理者ショートカット新規作成画面</h3>
  </div>
  <div class="row">
    <div class="col-10 offset-1 py-5 mt-4 mini-title">
      <div class="col-md-10 offset-1 mt-2 bg-light py-3">
        <%= form_with model: @shortcut,url: admin_shortcuts_path do |f| %>
          <div class="form-group row mt-3">
            <%= f.label:実演画像 %>
            <div class="col-8 offset-2">
              <%= f.file_field :shortcut_image, accept: "image/*", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-3">
            <%= f.label:ショートカット名 %>
            <div class="col-8 offset-2">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-3">
            <%= f.label:コマンド %>
            <div class="col-8 offset-2">
              <%= f.text_field :key, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mt-3">
            <%= f.label:カテゴリ %>
            <div class="col-8 offset-2">
              <%= f.collection_select :category_id, Category.all,:id,:name ,prompt: "カテゴリを選んでください" %>
            </div>
          </div>
          <%= f.submit "新規登録",class: 'col-2 offset-4 mt-5 btn btn-success' %>
          <%= link_to "戻る",categories_admin_shortcuts_path, class: "col-1 offset-3 mt-5 btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>