<%= render 'layouts/errors', obj: @shortcut %>
<h1>管理者ショートカット新規作成画面</h1>
<%= form_with model: @shortcut,url: admin_shortcuts_path do |f| %>
  <div>
    <%= f.label:実演画像 %>
    <%= f.file_field :shortcut_image, accept: "image/*" %>
  </div>
  <div>
    <%= f.label:ショートカット名 %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label:コマンド %>
    <%= f.text_field :key %>
  </div>
  <div>
    <%= f.label:カテゴリ %>
    <%= f.collection_select :category_id, Category.all,:id,:name ,prompt: "カテゴリを選んでください" %>
  </div>
  <div>
    <%= f.submit "新規登録",class: 'btn btn-success' %>
  </div>
<% end %>