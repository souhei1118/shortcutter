<%= render 'layouts/errors', obj: @shortcut %>
<div class="container">
  <div class="row">
    <h3 class="col-5 mt-5 mb-2 mini-title">管理者ショートカット編集画面</h3>
  </div>
  <div class="row">
    <div class="col d-flex py-5 mt-2 mini-title">
      <div class="col-md-6">
        <span class="fw-bold">現在使用されている実演画像</span>
        <p><%= image_tag @shortcut.get_shortcut_image(500,500) %></p>
      </div>
      <%= form_with model: @shortcut, url: admin_shortcut_path(@shortcut.id), method: :patch do |f| %>
      <div class="field">
        <%= f.file_field :shortcut_image, placeholder: "実演画像", accept: "image/*", class: "form-control" %>
      </div>
      <div class="col">
        <div class="form-group d-flex row mt-3">
          ショートカット名
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group row mt-3">
          コマンド
          <%= f.text_field :key, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group row mt-3">
          カテゴリ
          <%= f.collection_select :category_id, Category.all,:id,:name ,prompt: "カテゴリを選んでください" %>
        </div>
        <%= f.submit "編集内容を保存する",class: "btn btn-success mt-2" %>
        <%= link_to "戻る",admin_shortcut_path,class: "btn btn-primary mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>