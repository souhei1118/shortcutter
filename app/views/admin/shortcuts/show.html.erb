<h1>管理者ショートカット詳細画面</h1>
<div>
  <p>
    <%= image_tag @shortcut.get_shortcut_image(500,500) %>
  </p>
</div>
<div>
  ショートカット名
  <%= @shortcut.name %>
</div>
<div>
  コマンド
  <%= @shortcut.key %>
</div>
<div>
  カテゴリ：<%= @shortcut.category.name %>
</div>
<%= link_to "このショートカットを編集する", edit_admin_shortcut_path(@shortcut) %>

<!--部分テンプレート予定　START-->
レビュー一覧(<%= @shortcut.comments.count %>件)</br>
<% @shortcut.comments.each do |comment| %>
  <p>
    <%= image_tag comment.user.get_profile_image(100,100) %>
    ニックネーム:<%= comment.user.nickname %>さん

    <!--レビュー-->
    <p>評価：<%= comment.rate %>点</p>
    <div id="star-rate-<%= comment.id %>"></div>
    <script>
    $('#star-rate-<%= comment.id %>').raty({
      size: 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      half: true,
      readOnly: true,
      score: <%= comment.rate %>,
    });
    </script>
    <!--コメント-->
    <%= comment.comment %>
    <% if comment.user == current_user %>
      <%= link_to "自分のレビューを削除", shortcut_comment_path(comment.shortcut, comment), method: :delete,data: {confirm: "本当に削除しますか？"} %>
    <% end %>
    <% if current_admin.admin? %>
      <%= link_to "このレビューを強制削除", shortcut_comment_path(comment.shortcut, comment), method: :delete,data: {confirm: "本当に削除しますか？"} %>
    <% end %>
  </p>
<% end %>
<!--部分テンプレート予定　FINISH-->
