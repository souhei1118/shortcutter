<div class="container">
  <div class="row">
    <div class="col-5 mt-5 mini-title">
      <div class="mt-5">
        <%= image_tag @shortcut.get_shortcut_image(350,350) %>
      </div>
      <table class="table mt-5">
        <tr>
          <th>ショートカット名</th>
          <td><%= @shortcut.name %></td>
        </tr>
        <tr>
          <th>コマンド</th>
          <td><%= @shortcut.key %></td>
        </tr>
        <tr>
          <th>カテゴリ名</th>
          <td><%= @shortcut.category.name %></td>
        </tr>
      </table>
      <%= link_to "このショートカットを編集する", edit_admin_shortcut_path(@shortcut),class: "btn btn-secondary" %>
    </div>
    <div class="col-7 mt-3">
      <!--コメント一覧　部分テンプレート-->
      <div id="comments_area">
        <%= render 'admin/comments/review', shortcut: @shortcut %>
      </div>
      <!--コメント一覧　部分テンプレート-->
    </div>
  </div>
</div>

